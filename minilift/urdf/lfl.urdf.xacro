<?xml version="1.0" encoding="UTF-8"?>
<robot name="lfl" xmlns:xacro="http://ros.org/wiki/xacro">

<!--macro name="lfl" params="*origin"-->



<xacro:macro name="lfl_base" params="prefix">

    <!-- links -->

    <link name="${prefix}_lfl_base">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://minilift/meshes/visual/LFL_xyz.stl"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://minilift/meshes/collision/LFL_xyz.stl"/>
        </geometry>
      </collision>
    <inertial>
      <mass value=".3"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
    </link>

    <link name="${prefix}_lfl_liftplate">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://minilift/meshes/visual/LFL_liftplate.stl"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://minilift/meshes/collision/LFL_liftplate.stl"/>
        </geometry>
      </collision>
    <inertial>
      <mass value=".3"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
    </link>


    <joint name="${prefix}_lfl_lift" type="prismatic">
        <origin rpy="0 0 0" xyz="-0.22 0.0 0.05"/>
        <parent link="${prefix}_lfl_liftplate"/>
        <child link="${prefix}_lfl_base"/>
        <axis xyz="0 0 -1"/>
        <limit effort="0" lower="0.15" upper="1.5" velocity="0.05"/>
    </joint>

</xacro:macro>

</robot>
